<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="coupon_program_view_coupon_program_form" model="ir.ui.view">
        <field name="name">coupon.program.form</field>
        <field name="model">coupon.program</field>
        <field name="inherit_id" ref="coupon.coupon_program_view_form_common"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='company_id']" position="before">
                <label for="rule_expiration_date" string="Por vencimiento"/>
                <div name="rule_expiration_date" class="o_row">
                    <field name="rule_expiration_date" />
                     <span>Entre: </span>
                    <field name="rule_expiration_from" attrs="{'invisible':[('rule_expiration_date','=',False)], 'required':[('rule_expiration_date','!=',False)]}"/>
                     <span>meses y: </span>
                    <field name="rule_expiration_to" attrs="{'invisible':[('rule_expiration_date','=',False)], 'required':[('rule_expiration_date','!=',False)]}"/>

                </div>
            </xpath>
        </field>
    </record>
</odoo>
